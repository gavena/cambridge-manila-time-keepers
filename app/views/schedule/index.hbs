<!DOCTYPE html>
<html ng-app="AngularMaterial">

{{>head}}

<body ng-cloak>
    {{>toolbar}}

    <md-content>
        <div ng-init="allschedule='Y'" ng-controller="ScheduleController" class="md-padding site-content">
            <div style="margin-top: 3em;">
                <h2 class="md-toolbar-item md-breadcrumb md-subhead">
                    {{#each breadcrumbs}}
                        <span class="md-breadcrumb-page" btn-redirect-action url="{{this.url}}">{{this.name}}</span>
                        <md-icon aria-hidden="true" md-svg-src="/images/svg/right.svg" style="margin-top: -2px"></md-icon>
                    {{/each}}
                    <span class="md-breadcrumb-current">{{page}}</span>
                </h2>
            </div>

            <div class="md-padding">
                <h2>Schedules</h2>
                <md-button class="md-fab md-fab-top-right custom-button-primary create-button" btn-create-schedule-page-action aria-label="Create Custom Schedule button">
                    <md-icon md-svg-src="/images/svg/add.svg" aria-label="menu"></md-icon>
                </md-button>
                <div ng-if="hasSchedules">
                    <table id="schedule-table">
                        <thead>
                            <tr>
                                <th ng-repeat="column in columns">
                                    <% column %>
                                </th>
                            </tr>
                        </thead>
                        <tr ng-repeat="schedule in schedules | orderBy: 'name'">
                            <td data-label="Name">
                                <% schedule.name %>
                            </td>
                            <td data-label="Description">
                                <% schedule.description %>
                            </td>
                            <td data-label="Created By">
                                <% schedule.type %>
                            </td>
                            <td data-label="Created By">
                                <% schedule.created_by %>
                            </td>
                            <td data-label="Action">
                                <md-button class="md-raised custom-button-primary" aria-label="View Schedule" btn-view-schedule-action schedule-id="<% schedule._id %>">View</md-button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div ng-if="!hasSchedules">
                    No data available
                </div>
            </div>
        </div>
        {{>footer}}
    </md-content>
</body>

</html>
