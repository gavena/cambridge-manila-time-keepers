<!DOCTYPE html>
<html ng-app="AngularMaterial">
{{>head}}
<body ng-cloak>
    {{>toolbar}}

    <md-content>
        <div ng-controller="ReportController" class="md-padding site-content">
            <div style="margin-top: 3em;">
                <h2 class="md-toolbar-item md-breadcrumb md-subhead">
                  {{#each breadcrumbs}}
                      <span class="md-breadcrumb-page" btn-redirect-action url="{{this.url}}">{{this.name}}</span>
                      <md-icon aria-hidden="true" md-svg-src="/images/svg/right.svg" style="margin-top: -2px"></md-icon>
                  {{/each}}
                  <span class="md-breadcrumb-current">{{page}}</span>
              </h2>
            </div>
            <div class="md-padding">
                <h2>Reports</h2>
                <select ng-model="selectedMonth" ng-options="month.value as month.name for month in months"></select>
                <select ng-model="selectedYear" ng-options="year for year in years"></select>
                <md-button class="custom-button custom-button-primary" btn-download-action>Download</md-button>
            </div>
        </div>
        {{>footer}}

    </md-content>
</body>
</html>
