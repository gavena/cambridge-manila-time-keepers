<!DOCTYPE html>
<html ng-app="AngularMaterial">

{{>head}}

<body ng-cloak>
    {{>toolbar}}

    <md-content>
        <div ng-init="notify='{{notify}}';message='{{message}}';success='{{success}}';alluser='Y'" ng-controller="UserController" class="md-padding site-content">
            <div style="margin-top: 3em;">
                <h2 class="md-toolbar-item md-breadcrumb md-subhead">
                    {{#each breadcrumbs}}
                        <span class="md-breadcrumb-page" btn-redirect-action url="{{this.url}}">{{this.name}}</span>
                        <md-icon aria-hidden="true" md-svg-src="/images/svg/right.svg" style="margin-top: -2px"></md-icon>
                    {{/each}}
                    <span class="md-breadcrumb-current">{{page}}</span>
                </h2>
            </div>

            <div class="md-padding">
                <h2><% form.name %></h2>
                <md-button class="md-fab md-fab-top-right custom-button-primary create-view-button" btn-create-user-page-action aria-label="Create User button">
                    <md-icon md-svg-src="/images/svg/add.svg" aria-label="menu"></md-icon>
                </md-button>
                <md-button class="md-fab md-fab-top-right custom-button-primary edit-view-button" aria-label="Edit User button" btn-edit-user-action user-id="<% id %>">
                    <md-icon md-svg-src="/images/svg/edit.svg" aria-label="menu"></md-icon>
                </md-button>

            </div>
        </div>

        {{>footer}}
    </md-content>
</body>

</html>
