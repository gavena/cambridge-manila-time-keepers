<!DOCTYPE html>
<html ng-app="AngularMaterial">

{{>head}}

<body ng-cloak>
    {{>toolbar}}

    <md-content>
        <div id="team" ng-controller="TeamController" class="md-padding site-content" ng-init="username='{{usernamelogin}}';workdayId='{{workdayIdlogin}}'">
            <div style="margin-top: 3em;">
                <h2 class="md-toolbar-item md-breadcrumb md-subhead">
                    {{#each breadcrumbs}}
                        <span class="md-breadcrumb-page" btn-redirect-action url="{{this.url}}">{{this.name}}</span>
                        <md-icon aria-hidden="true" md-svg-src="/images/svg/right.svg" style="margin-top: -2px"></md-icon>
                    {{/each}}
                    <span class="md-breadcrumb-current">{{page}}</span>
                </h2>
            </div>

            <div class="md-padding">
                <h2>Team</h2>
                <md-grid-list md-cols="2" md-cols-sm="3" md-cols-md="4" md-cols-gt-md="7" md-row-height-gt-md="1:1" md-row-height="4:3" md-gutter="4em" md-gutter-gt-sm="2em">
                    <md-grid-tile ng-repeat="user in users" md-rowspan="1" md-colspan="1" md-colspan-sm="1" md-colspan-xs="1" >
                        <a href="#" class="no-style" layout="column" layout-fill style="height: 100%">
                            <md-card class="team-card scale" layout="column" flex>
                                <md-card-header class="team-header">
                                    <span flex></span>
                                    <md-button aria-label="Employee" username="<% user.username %>" btn-employee-page-action>
                                        <md-icon md-svg-icon="<% user.image %>/images/svg/boy.svg" md-menu-align-target class="team-icon"></md-icon>
                                    </md-button>
                                    <div class="notif" username="<% user.username %>" btn-employee-team-page-action>Team</div>
                                    <span flex></span>
                                </md-card-header>
                                <md-card-content class="team-content"  >
                                    <div layout-align="center center" layout="column">
                                        <span class="team-title"><% user.first_name %> <% user.last_name %></span>
                                        <span class="team-subhead"><% user.position %></span>
                                        <span class="team-subhead">Shift: <% user.shift %></span>
                                    </div>
                                </md-card-content>
                            </md-card>
                        </a>

                    </md-grid-tile>

                </md-grid-list>
            </div>
        </div>

        {{>footer}}
    </md-content>
</body>

</html>
